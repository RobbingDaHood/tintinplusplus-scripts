#ALIAS {start_autoskin}
{
    #VARIABLE {auto_skin_enabled} {1};
    backstab mob;
}

#ALIAS {stop_autoskin}
{
    #VARIABLE {auto_skin_enabled} {0};
}

#ACTION {{.*?}R.I.P.}
{
    #IF {$auto_skin_enabled}
    {
        get corpse;
    };
}

#ACTION {You get the corpse of {.*}}
{
    #IF {$auto_skin_enabled}
    {
        skin corpse;
    };
}

#ACTION {You finish pulling a bloody skin off the corpse of {.*}}
{
    craft inv put all;
    stop_autoskin;
}
